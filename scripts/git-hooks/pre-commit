#!/bin/bash

set -e

echo "üîß Running swift-format and SwiftLint on staged files..."

# Check if mint is installed
if ! command -v mint &> /dev/null; then
    echo "‚ö†Ô∏è  Mint is not installed."
    echo "Install it with: brew install mint"
    exit 0
fi

# Get list of staged Swift files
STAGED_SWIFT_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep ".swift$" || true)

if [ -z "$STAGED_SWIFT_FILES" ]; then
    echo "‚úÖ No Swift files to lint."
    exit 0
fi

# Run swift-format on staged files
echo "üé® Running swift-format..."
echo "$STAGED_SWIFT_FILES" | xargs swift format --in-place

# Re-add formatted files
echo "$STAGED_SWIFT_FILES" | xargs git add

# Run SwiftLint on staged files (via Mint) - this will fail on issues
echo "üßπ Running SwiftLint..."
if ! echo "$STAGED_SWIFT_FILES" | xargs mint run swiftlint swiftlint --quiet; then
    echo "‚ùå SwiftLint found issues. Please fix them before committing."
    exit 1
fi

echo "‚úÖ Formatting and linting complete."

exit 0