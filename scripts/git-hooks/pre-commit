#!/bin/bash

# Pre-commit hook for SwiftLint auto-fix
# This hook runs SwiftLint with auto-fix before each commit

set -e

echo "üîß Running SwiftLint auto-fix on staged files..."

# Check if swiftlint is installed
if ! command -v swiftlint &> /dev/null; then
    echo "‚ö†Ô∏è  SwiftLint is not installed. Skipping auto-fix."
    echo "Install it with: brew install swiftlint"
    exit 0
fi

# Get list of staged Swift files
STAGED_SWIFT_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep ".swift$" || true)

if [ -z "$STAGED_SWIFT_FILES" ]; then
    echo "‚úÖ No Swift files to lint."
    exit 0
fi

# Run SwiftLint fix on staged files
echo "$STAGED_SWIFT_FILES" | xargs swiftlint --fix --format --quiet

# Re-add files that were auto-fixed
echo "$STAGED_SWIFT_FILES" | xargs git add

echo "‚úÖ SwiftLint auto-fix complete. Modified files have been re-staged."

exit 0
